extends layout

block content
  h1= title
  p Rows = #{query.rows} and Columns = #{query.cols}
    -
        rows= Number(query.rows)
        col= Number(query.cols)
    if !Number.isInteger(rows)
        p The given rows are not accurate 
    else if !Number.isInteger(col)
        p The given columns are not appropriate 
    else if rows < 0 || rows > 6
        p The given rows are in one to six range 
    else if col < 0 || col > 6
        p The given columns are in one to six range
    else
       table           
            - for(let i=0; i<rows; i++) {
               tr
                 - for(let j=i; j<col+i; j++) {
                     td= j 
                 -}              
            - }